html(ng-app="mdLoginApp")
	head
		title!= title
		link(rel='stylesheet', href='/css/bootstrap.min.css')
		link(rel="stylesheet", href="//fonts.googleapis.com/css?family=Raleway")
		link(rel='stylesheet', href='/css/style.css')

		script(src="/js/jquery.min.js")
		script(src="/js/bootstrap.min.js")
		script(src="/js/angular.min.js")
		script(src="/js/ui-bootstrap-tpls-0.12.0.min.js")
		script(src="/js/controller.js")
	body
		div(ng-controller="loginCtrl" class="container")
			div(class="row")
				div(class="col-md-6 col-md-offset-3")
					div(class="form-wrapper box-transparent")
						img(src="images/logo.png" id="logo" height="59px" width="143px")

						alert(ng-repeat="alert in alerts" type="{{ alert.type }}" close="closeAlert($index)")
							| {{ alert.msg }}

						form(ng-submit="login()" class="form-group" name="loginForm" role="form")
							div(class="input-group")
								span(class="input-group-addon")
									i(class="glyphicon glyphicon-user")
								input(ng-model="username" type="text" class="form-control" id="username" name="username" placeholder="Usuario" required)
							div(class="input-group")
								span(class="input-group-addon")
									i(class="glyphicon glyphicon-lock")
								input(ng-model="password" type="password" class="form-control" id="password" name="password" placeholder="Contraseña" required)
							div(class="checkbox")
								label
									input(type="checkbox" name="remember" checked=(true))
									| Recordar sesión
							button(ng-disabled="inProgress" type="submit" class="btn btn-default btn-lg btn-block btn-warning")
								| {{ buttonLabel }}
							div(class="row")
								div(class="col-md-12")
									div(class="col-md-6")
										a(href="")
											| Registrarme
									div(class="col-md-6 text-right")
										a(href="")
											| Olvidé la contraseña
					div(class="social-wrapper box-transparent")
						h4(class="text-center")
							| O inicia sesión con:
						div(class="text-center")
							a(href="http://facebook.com")
								img(src="images/facebook.png", height="24px", width="24px")
							a(href="http://twitter.com")
								img(src="images/twitter.png", height="24px", width="24px")
